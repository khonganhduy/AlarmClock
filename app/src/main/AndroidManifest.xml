<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sjsu.android.alarmclockplusplus">

    <uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="sjsu.android.alarmclockplusplus.AlarmListDisplayActivity"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="sjsu.android.alarmclockplusplus.GameResultActivity"
            android:screenOrientation="portrait"
            ></activity>
        <activity android:name="sjsu.android.alarmclockplusplus.SetAlarmSettingsActivity"
            android:screenOrientation="portrait"
            ></activity>
        <service
            android:name=".AlarmBroadcastService"
            android:enabled="true"
            android:permission="android.permission.BIND_JOB_SERVICE"
            ></service>
        <receiver
            android:name=".AlarmBroadcastReceiver"
            ></receiver>
    </application>

</manifest>